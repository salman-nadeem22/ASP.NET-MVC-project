@model IEnumerable<AptechProject.Models.Winners>

<div class="jumbotron jumbotron-fluid text-center" style="background: rgb(5,162,149);background: linear-gradient(172deg, rgba(5,162,149,1) 22%, rgba(45,108,223,1) 48%, rgba(0,13,103,1) 100%);color:lightgrey">
    <div class="container">
        <h1 class="display-4">Vote</h1>
        <h2 class="lead">For Winners</h2>
    </div>
</div>
@Html.ActionLink(" Create Winners ", "Create", "Rankings")

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NameOfWinner)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StudentRollNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SurveyName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NameOfWinner)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StudentRollNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SurveyName)
            </td>
            <td>
                @if (User.Identity.IsAuthenticated)
                {
                    if (User.IsInRole("admin") || User.IsInRole("faculty"))
                    {
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id });
                        Html.ActionLink("Details", "Details", new { id = item.Id });
                        Html.ActionLink("Delete", "Delete", new { id = item.Id });
                    }
                }
            </td>
        </tr>
    }

</table>
